<div class="media" id="item_<%= item.id %>">
  <div class="media-body">
    <h4 class="media-heading">
      <%= item.name.capitalize %>
      <%= link_to "", item, :remote => true, method: :delete, class: 'glyphicon glyphicon-ok' %>
    </h4>
    <small>
      Created <%= time_ago_in_words(item.created_at) %> ago |
      Time Remaining to Complete: <%= distance_of_time_in_words(item.created_at + 7.days, Time.now) %>
    </small>
  </div>
</div>
